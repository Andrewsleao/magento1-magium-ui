<config>
    <tabs>
        <magium translate="label" module="magium_clairvoyant">
            <label>Magium</label>
        </magium>
    </tabs>
    <sections>
        <magium translate="label" module="magium_clairvoyant">
            <label>Magium</label>
            <tab>magium</tab>
            <frontend_type>text</frontend_type>
            <sort_order>20</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <testing_url translate="label">
                            <label>Testing URL</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </testing_url>
                        <selenium_url translate="label">
                            <label>Selenium URL</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                        </selenium_url>
                        <log translate="label">
                            <label>Log Location</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <comment>Either the relative path inside the Magento root or the absolute path in the filesystem</comment>
                            <show_in_default>1</show_in_default>
                        </log>
                    </fields>
                </general>
            </groups>
        </magium>
    </sections>
</config>
